# ============================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN ORACLE
# ============================================
# Copia este archivo a .env en el servidor Oracle
# y completa los valores reales

# ============================================
# BASE DE DATOS POSTGRESQL
# ============================================
DB_HOST=127.0.0.1
DB_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=tu_password_postgres_aqui
POSTGRES_DB=receptionistai
DB_SSL_ENABLED=false

# ============================================
# SERVIDOR Y PUERTO
# ============================================
PORT=3001
NODE_ENV=production

# ============================================
# CORS Y DOMINIOS
# ============================================
# IMPORTANTE: Usa tu dominio real o IP pública de Oracle
# Ejemplo con dominio: https://tu-dominio.com,https://www.tu-dominio.com
# Ejemplo con IP: http://137.131.174.209:3000
CORS_ALLOWED_ORIGINS=http://137.131.174.209:3000,https://tu-dominio.com

# URL del frontend (Next.js)
NEXT_PUBLIC_APP_URL=http://137.131.174.209:3000
# O con dominio: https://tu-dominio.com

# URL del backend (para webhooks y callbacks)
BACKEND_URL=http://137.131.174.209:3001
# O con dominio: https://api.tu-dominio.com

# Dominio para cookies (sin http://)
COOKIE_DOMAIN=137.131.174.209
# O con dominio: tu-dominio.com

# Cookies seguras (true en producción con HTTPS, false con HTTP)
COOKIE_SECURE=false
# Cambiar a true cuando tengas HTTPS configurado

# ============================================
# JWT (JSON Web Tokens)
# ============================================
# IMPORTANTE: Genera nuevas claves para producción
# Para generar las claves:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
# Luego codifica en base64:
# cat private.pem | base64 -w 0
# cat public.pem | base64 -w 0

JWT_PRIVATE_KEY_BASE64=tu_private_key_base64_aqui
JWT_PUBLIC_KEY_BASE64=tu_public_key_base64_aqui
JWT_EXPIRATION_TIME=1
# Tiempo de expiración en días (1 = 24 horas)

# ============================================
# GOOGLE OAUTH
# ============================================
# Obtén estos valores desde Google Cloud Console
# https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui

# Redirect URI para login de usuarios con Google
# IMPORTANTE: Debe coincidir con lo configurado en Google Cloud Console
GOOGLE_REDIRECT_URI=http://137.131.174.209:3001/auth/google/callback
# O con dominio: https://api.tu-dominio.com/auth/google/callback

# Redirect URI específico para Google Calendar (opcional)
# Si no se configura, se construye automáticamente desde GOOGLE_REDIRECT_URI
GOOGLE_CALENDAR_REDIRECT_URI=http://137.131.174.209:3001/google-calendar/auth/callback
# O con dominio: https://api.tu-dominio.com/google-calendar/auth/callback

# Google Service Account (para integración directa - opcional)
GOOGLE_CLIENT_EMAIL=tu_service_account_email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu_private_key_aqui\n-----END PRIVATE KEY-----\n"

# Google Calendar
GOOGLE_CALENDAR_ID=primary

# Google Sheets (opcional)
GOOGLE_SHEETS_ID=tu_google_sheets_id_aqui
GOOGLE_SHEETS_RANGE=A:J

# ============================================
# VAPI AI - ASISTENTES DE VOZ
# ============================================
# Obtén estos valores desde tu cuenta de VAPI
# https://dashboard.vapi.ai/

VAPI_API_KEY=tu_vapi_api_key_aqui
VAPI_PUBLIC_KEY=tu_vapi_public_key_aqui

# ============================================
# OPENAI API
# ============================================
# Obtén tu API key desde OpenAI
# https://platform.openai.com/api-keys

OPENAI_API_KEY=tu_openai_api_key_aqui

# ============================================
# ELEVENLABS - VOZ AI
# ============================================
# Obtén estos valores desde ElevenLabs
# https://elevenlabs.io/

ELEVENLABS_API_KEY=tu_elevenlabs_api_key_aqui
ELEVENLABS_VOICE_ID=tu_elevenlabs_voice_id_aqui

# ============================================
# AWS S3 - ALMACENAMIENTO DE ARCHIVOS
# ============================================
# Para almacenar archivos de knowledge base
# Crea un bucket en AWS S3 y obtén las credenciales

AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_aws_access_key_id_aqui
AWS_SECRET_ACCESS_KEY=tu_aws_secret_access_key_aqui
AWS_S3_BUCKET_NAME=receptionistai-knowledge-files

# ============================================
# REDIS (OPCIONAL)
# ============================================
# Para colas de trabajos asíncronos (Bull)
# Si no usas Redis, puedes omitir estas variables

REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# ============================================
# SMTP - ENVÍO DE EMAILS
# ============================================
# Configuración para envío de emails
# Puedes usar servicios como SendGrid, Mailgun, o SMTP propio

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_aplicacion_aqui

# ============================================
# MERCADOPAGO (OPCIONAL)
# ============================================
# Para procesamiento de pagos

MERCADOPAGO_ACCESS_TOKEN=tu_mercadopago_access_token_aqui
MERCADOPAGO_BASE_URL=https://api.mercadopago.com
MERCADOPAGO_WEBHOOK_URL=http://137.131.174.209:3001/webhooks/mercadopago

# ============================================
# WEBHOOKS (OPCIONAL)
# ============================================
# URLs para webhooks externos

WEBHOOK_URL_N8N=https://tu-ngrok-n8n-url.com
WEBHOOK_URL_BACKEND=http://137.131.174.209:3001

# ============================================
# LOGGING Y DEBUG
# ============================================
# Habilitar logs de TypeORM (true/false)
ENABLE_ORM_LOGS=false

# Namespace (para multi-tenant, opcional)
NAMESPACE=default

# ============================================
# NOTAS IMPORTANTES
# ============================================
# 1. NUNCA subas este archivo con valores reales a Git
# 2. Mantén las claves privadas seguras
# 3. Usa variables de entorno del sistema cuando sea posible
# 4. Revisa los logs después de iniciar el servicio:
#    sudo journalctl -u backend -f
# 5. Verifica que todas las variables estén cargadas:
#    El backend mostrará errores si faltan variables requeridas

